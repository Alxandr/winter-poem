{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}} h-entry" itemscope itemtype="http://schema.org/BlogPosting">
    <header class="post-header">
        <h2 class="post-title p-name"><a href="{{url}}" class="u-url" itemprop="url"><span itemprop="name">{{{title}}}</span></a></h2>
    </header>
    <section class="post-excerpt p-summary">
        <p>{{excerpt}}&hellip; <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        <div class="p-author h-card inline" itemprop="author" itemscope itemtype="http://schema.org/Person">
            {{#if author.image}}<img class="author-thumb u-photo" itemprop="image" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
            <div class="p-name u-url inline" itemprop="name">{{author}}</div>
        </div>
        {{tags prefix="<span> on </span>"}} 
        <time class="post-date dt-published" itemprop="datePublished" content="{{date format='YYYY-MM-DD'}}" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        &#8226;
        <a href="{{url}}#disqus_thread">0 Comments</a>
        <hr />
    </footer>
</article>
{{/foreach}}

{{> disqus-count }}

