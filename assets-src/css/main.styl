@require 'mixins'

/*!
 * Main
 */

@require 'header'

div.content-wrapper
  width: 60%
  max-width: 800px
  margin-left: 40%
  
  @media (min-width: 1330px)
    margin-left: 530px
  
  > div
    margin: 0 10%
    padding: 50px 0

article
  margin: 0 0 2.2rem 0
  
  header
    margin-top: 0
    margin-bottom: .2rem
    
    h2
      font-size: 1.5rem
      line-height: 1.3em
      
      a
        color: #333
  
  section.post-excerpt
    font-size: 0.9rem
    color: #999
  
  footer
    margin: .7rem 0 0 0
    font-size: 0.9rem
    color: #c7c7c7
    
    .author-thumb
      width: 1em
      height: 1em
      border-radius: 50%
      float: left
      margin-right: 5px
    
    span,
    time
      font-size: 0.7rem
    
    hr
      width: 30%
      margin: 2.2rem 0 2.1rem 0
      border-top: 1px solid #ddd

footer.site-footer
  display: block
  padding: 2em 0 0 0
  border-top: 2px solid #ddd
  font-size: .7rem
  color: #b3b3b3

article.post
  header
    section.post-meta
      margin: 0 0 0.4rem 0
      font-size: 0.8rem
      line-height: 1rem
      color: #c7c7c7
      
      a
        color: #666
  
  footer
    section.author
      position: relative
      margin: 1.6em 0
      padding: 30px
      border: 2px dashed #e2edf2
      
      div.author-meta
        margin-left: 120px
        min-height: 120px
          
      figure.author-image a img
        width: 80px
        height: 80px
        border-radius: 50%
        border: 5px solid #fff
        position: absolute
        top: 30px
        left: 30px
