@require 'mixins'
@require 'variables'

header.main-header
  display: block
  position: fixed
  left: 0
  top: 0
  bottom: 0
  background-size: cover
  width: 40%
  max-width: 530px
  
  @media (max-width: width-mobile)
    position: relative
    width: 100vw
    height: 100vh
    min-width: 100vw
    max-width: 100vw
    min-height: 100vh
    max-height: 100vh
    margin: 0
  
  &.no-cover
    background: url('../images/background-cover.jpg') top left no-repeat #666666
  
  &:after
    fill()
    display: block
    content: ''
    background-color: rgba(68, 68, 68, 0.6)
    background-image: linear-gradient(140deg,rgba(68, 68, 68, 0.6) 20%, rgba(0, 0, 0, 0.9))
  
  .main-content
    fill()
    z-index: 1
    text-align: center
    font-weight: 100
    color: #fff
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.4)
    padding: 0 60px
    
    a
      color: #fff
  
  .blog-logo > img
    width: 120px
    height: 120px
    margin-bottom: .2em
    border-radius: 50%
    border: 3px solid #fff
    box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.3)
  
  h1
    margin: 0 0 5px 0
    font-size: 2.5rem
    letter-spacing: 4px
    color: #fff
  
  h2
    font-size: 1.2rem
    letter-spacing: 3px
    color: #ccc
    margin: 0
  
  hr
    width: 50%
    margin: 20px auto
    border: none
    border-top: 1px solid rgba(255, 255, 255, 0.14)
  
  nav
    margin-top: 10px
    display: inline-block
    position: relative
    
    > ul
      display: inline-block
      float: left
      position: relative
      margin: 0
      list-style-type: none
      
      &:first-child
        margin-right: 20px
      
      > li
        display: inline-block
        margin: 0 1px 0 0
        line-height: 1em
        
        > a
          display: block
          position: relative
          border: 1px solid #fff
          color: #fff
          opacity: .8
          padding: 10px 20px
          font-size: .9rem
          font-weight: bold
          letter-spacing: 1px
          text-shadow: none
          -webkit-font-smoothing: antialiased
          border-radius: 20px
    
    > ul.social > li > a
      padding: 6px 8px 6px 9px
    
      > .icon
        font-size: 1.5rem
        display: block
      
      > .label
        display: none